<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Vakti Im</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Vakti Im", "", "", new { area = "" }, new { @class = "navbar-brand" })*@
                <h3 style="color:linen">Vakti im</h3>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <div class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Logout", "MyProfile", "HOME")</li>
                    </div>
                    
                    <li>@Html.ActionLink("Perdoruesit", "Index", "PERDORUEs")</li>
                    <li>@Html.ActionLink("Porosite", "Porosi", "POROSIs")</li>
                    <li>@Html.ActionLink("Gatimet aktive", "GatimetAktive", "GATIMs")</li>
                   
                </ul>
              
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vakti Im</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
