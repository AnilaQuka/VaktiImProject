@model IEnumerable<VaktiImProject.Models.Porosite_e_mia_Result>
@{

    ViewBag.Title = "Porosit e mia";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h4> Porosit e mia </h4>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Data
                    </th>
                    <th>
                        Statusi
                    </th>
                    <th>Vlera</th>
                    <th>Veprime</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.datetime_Porosi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status_porosie)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Vlera)</td>
                    <td class="btn-group">

                        <a href="@Url.Action("OrdersDetails", new { id = item.porosi_id })" class="btn btn-info">
                            <i class="fa fa-info"></i>
                            Detaje
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>



